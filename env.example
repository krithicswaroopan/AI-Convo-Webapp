# AI Assistant Environment Configuration

# API Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Server Configuration
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,ws://localhost:8000,wss://localhost:8000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model Configuration
DEFAULT_LLM_MODEL=meta-llama/llama-3.1-8b-instruct

# Whisper Configuration
WHISPER_MODEL=whisper-1

# Audio Processing Configuration
SAMPLE_RATE=16000
CHUNK_DURATION_MS=30
VAD_MODE=3

# WebRTC Configuration
JANUS_URL=ws://localhost:8188
JANUS_ADMIN_SECRET=ai_voice_webapp

# Database Configuration
DATABASE_URL=sqlite:///./ai_assistant.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=ai_voice_webapp
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO 

# Coqui TTS (default, no API key needed)
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_DEFAULT_VOICE=ljspeech 